<!-- Jumbotron -->
<div class="jumbotron card card-image">
    <div class="overlay">
        <div class="py-5 inner">
            <div class="text-white text-center">

                <!-- Content -->
                <h1 id="title-font" class="card-title display-4 my-4 pt-5">Celebrity News Scraper</h1>
                <p id="lead-font" class="mb-4 pb-2 px-md-5 mx-md-5 lead"><em>All your Celebrity news here!</em></p>

            </div>
        </div>
    </div>
</div>

<div class="container-fluid article-container">
    {{#each articles}}
    {{#unless saved}}
    {{> articles/article-card}}
    {{/unless}}
    {{else}}
    <div class="text-center white-text py-3 error">
        <h3>No new articles were found...</h3>
        <h5>Click on the <em>Scrape</em> button above to get the latest headlines!</h5>
    </div>
    {{/each}}
</div>

<!-- Client-side JavaScript -->
<script src="assets/js/index.js"></script>
<nav class="navbar navbar-expand-lg navbar-dark">
    <span class="navbar-brand"> <strong>Celebrity News Scraper</strong></span>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/saved">Saved Articles <span class="sr-only">(current)</span></a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <form class="form-inline">
                    <button class="btn btn clear" type="button">Clear Articles</button>
                </form>
            </li>
        </ul>
    </div>
</nav>

<!-- Jumbotron -->
<div class="jumbotron card card-image">
    <div class="overlay">
        <div class="py-5 inner">
            <div class="text-white text-center">

                <!-- Content -->
                <h1 id="title-font" class="card-title display-4 my-4 pt-5">Saved Articles</h1>
                <p id="lead-font" class="mb-4 pb-2 px-md-5 mx-md-5 lead"><em>View your saved articles and leave a
                        comment!</em></p>

            </div>
        </div>
    </div>
</div>

<div class="container-fluid article-container">
    {{#each articles}}
    {{#if saved}}
    {{> articles/saved-card}}
    {{/if}}
    {{else}}
    <div class="text-center white-text py-3 error">
        <h3>You haven't saved any articles yet...</h3>
        <h5>Visit the <a id="home" href="/">home page</a> for the latest news!</h5>
    </div>
    {{/each}}

</div>

{{!-- Comments Modal --}}
<div class="modal fade" id="commentsModal" tabindex="-1" role="dialog" aria-labelledby="commentsModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 id="commentTitle" class="modal-title w-100 font-weight-bold">Comments For Article: <span
                        id="articleId"></span> </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div id="commentsDiv"></div>
                <div class="form-group pt-4">
                    <textarea type="text" id="commentBody" class="form-control" rows="4"
                        placeholder="New Comment"></textarea>
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-default postComment">Post Comment</button>
            </div>
        </div>
    </div>
</div>

{{!-- Client-side JavaScript --}}
<script src="assets/js/saved.js"></script>